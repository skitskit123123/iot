#include <Wire.h>
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27,16,2);
#define dht_dpin 7
#include<dht.h>
dht DHT;
void setup()
{
Serial.begin(9600);
lcd.begin();
}
void loop()
{
DHT.read11(dht_dpin);
lcd.setCursor(0, 0);
lcd.print("Temp=");
lcd.print(DHT.temperature);
lcd.print("Celsius");
lcd.setCursor(0, 1);
lcd.print("Humidity=");
lcd.print(DHT.humidity);
lcd.print("%");
delay(2000);
}
